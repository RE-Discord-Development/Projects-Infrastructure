api:
  dashboard: false

metrics:
  prometheus:
    addEntryPointsLabels: true
    addServicesLabels: true
    entryPoint: metrics

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
    http:
      tls:
        certResolver: le
  metrics:
    address: ":8082"

providers:
  docker:
    exposedByDefault: false

certificatesResolvers:
  le:
    acme:
      caServer: {{ acme_ca_server }}
      email: {{ acme_dns_email }}
      storage: {{ acme_cert_store }}
      dnsChallenge:
        provider: {{ acme_dns_provider }}
        delayBeforeCheck: 0
